# ========================================
# CONTABILIDADEPRO - CONFIGURAÇÕES DE AMBIENTE
# ========================================

# ----------------------------------------
# SUPABASE CONFIGURATION - LOCAL DEVELOPMENT
# ----------------------------------------
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (para operações administrativas)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URL (para conexões diretas se necessário)
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# JWT Secret (para validação de tokens)
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Supabase Storage Configuration
NEXT_PUBLIC_SUPABASE_STORAGE_URL=http://127.0.0.1:54321/storage/v1/s3
SUPABASE_S3_ACCESS_KEY=your_s3_access_key_here
SUPABASE_S3_SECRET_KEY=your_s3_secret_key_here
SUPABASE_S3_REGION=local

# ----------------------------------------
# INTEGRAÇÕES EXTERNAS
# ----------------------------------------

# OpenAI Configuration (para IA)
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Azure Document Intelligence (para OCR)
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=your_azure_endpoint_here
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_azure_key_here

# ----------------------------------------
# CONFIGURAÇÕES DA APLICAÇÃO
# ----------------------------------------

# URLs da aplicação
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Configurações de desenvolvimento local
NEXT_PUBLIC_ENVIRONMENT=local
NEXT_PUBLIC_DEBUG=true

# URLs dos serviços Supabase locais
NEXT_PUBLIC_SUPABASE_STUDIO_URL=http://127.0.0.1:54323
NEXT_PUBLIC_SUPABASE_INBUCKET_URL=http://127.0.0.1:54324
NEXT_PUBLIC_SUPABASE_ANALYTICS_URL=http://127.0.0.1:54327

# Configurações para Edge Functions (se necessário)
SUPABASE_FUNCTIONS_URL=http://127.0.0.1:54321/functions/v1

# ----------------------------------------
# CONFIGURAÇÕES DE EMAIL (DESENVOLVIMENTO)
# ----------------------------------------

# Configurações de email para desenvolvimento (usando Inbucket)
SMTP_HOST=127.0.0.1
SMTP_PORT=2500
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@contabilidadepro.local

# ----------------------------------------
# CONFIGURAÇÕES DE LOGGING E DEBUG
# ----------------------------------------

# Configurações de logging para desenvolvimento
NEXT_PUBLIC_LOG_LEVEL=debug
ENABLE_QUERY_LOGGING=true

# ----------------------------------------
# CONFIGURAÇÕES PARA PRODUÇÃO (COMENTADAS)
# ----------------------------------------

# Para produção, descomente e configure:
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key
# DATABASE_URL=your_production_database_url
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# NODE_ENV=production
# NEXT_PUBLIC_ENVIRONMENT=production
# NEXT_PUBLIC_DEBUG=false
# NEXT_PUBLIC_LOG_LEVEL=error
# ENABLE_QUERY_LOGGING=false

# ----------------------------------------
# INSTRUÇÕES DE USO
# ----------------------------------------

# 1. Copie este arquivo para .env.local
# 2. Configure as variáveis necessárias
# 3. Para desenvolvimento local, use as configurações do Supabase local
# 4. Para produção, configure as URLs e chaves do Supabase Cloud
# 5. Nunca commite o arquivo .env.local no Git
